<header>
    <form action="">
        <input type="text" placeholder="Search...">
        <span class="btn-search show">
            <img src="../../public/search.png" alt="seach">
        </span>
        <span class="btn-close">
            <img src="../../public/close.png" alt="search button" class="delete">
        </span>
    </form>
    <div class="profile">
        <img src="yutaphoto.png" alt="Profile" class="profile-pic">
    </div>
</header>

<style>
    header {
        display: flex;
        justify-content: space-between;
        align-items: center;
        padding: 10px 20px;
    }

    form {
        display: flex;
        align-items: center;
        position: relative;
        margin-right: 20px;
        width: 500px;
    }

    input[type="text"] {
        width: 100%;
        padding: 8px 16px; 
        font-size: 16px;
        border: 1px solid #ccc;
        border-radius: 25px;
        outline: none;
        transition: width 0.3s ease;
    }

    input[type="text"]:focus {
        border-color: #888;
    }
    
    .profile {
        margin-left: 20px;
    }

    .profile-pic {
        width: 40px;
        height: 40px;
        border-radius: 50%;
        object-fit: cover;
    }

    .btn-search, 
    .btn-close{
        position: absolute;
        content: "";
        top: 0;
        right: 0;
        transform: translate(-50%,20%);
        cursor: pointer;
        width: 24px;
        height: 24px;
        display: none;
    }

    img{
        width: 100%;
    }

    .show {
        display: block;
    }
</style>

<script>
    import { taskList } from '../index.ts'
    const form = document.querySelector("form")
    const searchInput = document.querySelector("input")
    const closeButton = document.querySelector(".btn-close")
    const searchButton = document.querySelector(".btn-search")

    document.querySelector(".delete")?.addEventListener("click",(e)=>{
        taskList.resetFilter()
        closeButton?.classList.remove("show")
        searchButton?.classList.add("show")
        form?.reset()
    })

    searchButton?.addEventListener("click",(e)=>{
        filterTask()
    })

    form?.addEventListener("submit",(e)=>{
        e.preventDefault();
        filterTask()
    })

    function filterTask(){   
        let targetInput = searchInput?.value
        if(targetInput?.trim()){
        taskList.tasks.forEach((item)=>{
            if(item.title.includes(targetInput)){
                taskList.addFilteredTask(item)
            }
        })

        closeButton?.classList.add("show")
        searchButton?.classList.remove("show")
    }

    // rendering 
    taskList.renderTasks()
}
</script>